<div class="section">
  <%= simple_form_for @post do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :title, input_html: { class: "input" }, wrapper: false, placeholder: "Title", label_html: { class: "label"} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :content, input_html: { class: "textarea" }, wrapper: false, placeholder: "Post Content", label_html: { class: "label"} %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-primary" %>
  <%end%>
</div>